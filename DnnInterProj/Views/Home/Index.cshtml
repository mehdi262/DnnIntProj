
@{
   
    ViewBag.Title = " Test Person Management";
}



    <h2>Person Management</h2>

<button type="submit" class="btn btn-info btn-lg js-create"  data-toggle='modal' data-target='#myModal-add' id="create-user2">Create New User</button>


    <br />
    <br />

<!-- Modal -->
<div id="myModal-Edit" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->        
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">
                        Edit Person Details (id:
                        <span  id="id" ></span>
                        )

                    </h4>
                </div>
                <div class="modal-body">
                    <p class="validateTipsEdit">All form fields are required.</p>
                    <fieldset>
                        <div style="width:50%; float:left">
                            <label for="name" style="float:left; width:30%">Name</label>
                            <input type="text" name="name" id="name" style="float:left; width:60%" class="text ui-widget-content ui-corner-all" />
                        </div>
                        <div style="width:50%; float:right">
                            <label for="lastName" style="float:left; width:30%">Last Name</label>
                            <input name="lastName" id="lastName" value="" style="float:right; width:60%" class="text ui-widget-content ui-corner-all" />
                        </div>
                        <div style="float:none"></div>
                        <div style="width:50%; float:left">
                            <label for="email" style="float:left; width:30%">Email</label>
                            <input type="text" name="email" id="email" value="" style="float:left; width:60%" class="text ui-widget-content ui-corner-all" />
                        </div>
                        <div style="width:50%; float:right">
                            <label for="userName" style="float:left; width:30%">User Name</label>
                            <input name="userName" readonly id="userName" value="" style="float:right; width:60%" class="text ui-widget-content ui-corner-all" />
                        </div>
                        <div style="width:50%; float:left">
                            <label for="age" style="float:left; width:30%">Age</label>
                            <input name="age"  id="age" value="" style="width:60%" class="text ui-widget-content ui-corner-all" />
                        </div>

                    </fieldset>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default js-update"  >Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

</div>

</div>
<div id="myModal-add" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">
                    Add New Person 

                </h4>
            </div>
            <div class="modal-body">
                <p class="validateTipsAdd">All form fields are required.</p>
                <fieldset>
                    <div style="width:50%; float:left">
                        <label for="name" style="float:left; width:30%">Name</label>
                        <input type="text" name="name" id="aname" style="float:left; width:60%" class="text ui-widget-content ui-corner-all" />
                    </div>
                    <div style="width:50%; float:right">
                        <label for="lastName" style="float:left; width:30%">Last Name</label>
                        <input name="lastName" id="alastName" value="" style="float:right; width:60%" class="text ui-widget-content ui-corner-all" />
                    </div>
                    <div style="float:none"></div>
                    <div style="width:50%; float:left">
                        <label for="email" style="float:left; width:30%">Email</label>
                        <input type="text" name="email" id="aemail" value="" style="float:left; width:60%" class="text ui-widget-content ui-corner-all" />
                    </div>
                    <div style="width:50%; float:right">
                        <label for="userName" style="float:left; width:30%">User Name</label>
                        <input name="userName"  id="auserName" value="" style="float:right; width:60%" class="text ui-widget-content ui-corner-all" />
                    </div>
                    <div style="width:50%; float:left">
                        <label for="age" style="float:left; width:30%">Age</label>
                        <input name="age" id="aage" value="" style="width:60%" class="text ui-widget-content ui-corner-all" />
                    </div>

                </fieldset>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default js-add">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>

</div>
   
    <input id="searchInput" value="Type To Filter">
    <div id="users-contain" class="ui-widget">
        <h1>Existing Users:</h1>


        <table id="users" class="table table-bordered table-hover ui-widget" Style="width:100%">
            <thead>
                <tr class="ui-widget-header ">
                    <th>Name</th>
                    <th>Email</th>
                    <th> Age</th>
